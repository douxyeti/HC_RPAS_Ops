#:kivy 2.2.1

<DashboardScreen>:
    name: 'dashboard'
    md_bg_color: [0.95, 0.95, 0.95, 1] if app.theme_cls.theme_style == "Light" else [0.1, 0.1, 0.1, 1]
    
<DashboardCard>:
    md_bg_color: [1, 1, 1, 1] if app.theme_cls.theme_style == "Light" else [0.15, 0.15, 0.15, 1]
    radius: [10, 10, 10, 10]
    ripple_behavior: True
    elevation: 2
    
    canvas.before:
        Color:
            rgba: [0.2, 0.2, 0.9, 0.05]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, 10, 10, 10]

<NavigationItem>:
    theme_text_color: "Custom"
    text_color: [0.2, 0.2, 0.9, 1]
    font_style: "Body1"
    _height: "48dp"
    divider: "Full"
    divider_color: [0.5, 0.5, 0.5, 0.5]
