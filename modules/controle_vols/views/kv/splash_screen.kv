#:kivy 2.3.1

<SplashScreen>:
    name: 'splash'
    md_bg_color: self.theme_cls.backgroundColor
    
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        spacing: "16dp"
        padding: ["0dp", "2dp"]
        pos_hint: {"center_x": .5, "center_y": .6}
        
        Image:
            source: "assets/images/logo.png"
            size_hint: None, None
            size: "150dp", "75dp"
            pos_hint: {"center_x": .5}
            
        MDLabel:
            text: "HighCloud Solutions Télépilotées"
            halign: "center"
            theme_font_size: "Custom"
            font_size: "22sp"
            adaptive_height: True

        MDLabel:
            text: "Module Contrôle des Vols"
            halign: "center"
            theme_font_size: "Custom"
            font_size: "26sp"
            adaptive_height: True   

        MDLabel:
            text: "Contrôle Opérationnel des Vols"
            halign: "center"
            theme_font_size: "Custom"
            font_size: "40sp"
            adaptive_height: True
            
        MDLinearProgressIndicator:
            id: progress_bar
            value: 0
            size_hint_x: .7
            pos_hint: {"center_x": .5}
            type: "determinate"
            
        MDLabel:
            id: status_label
            text: "Chargement..."
            halign: "center"
            adaptive_height: True
            
        MDButton:
            id: continue_button
            style: "filled"
            size_hint_x: None
            width: "200dp"
            pos_hint: {"center_x": .5}
            text: "Continuer"
            disabled: True
            on_release: root.go_to_login()
