#:kivy 2.2.1

<SplashScreen>:
    md_bg_color: self.theme_cls.backgroundColor
    
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: "20dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_height: True
        
        Image:
            source: "assets/images/logo.png"
            size_hint: None, None
            size: "150dp", "150dp"
            pos_hint: {"center_x": .5}
            
        MDLabel:
            text: "HighCloud RPAS"
            halign: "center"
            font_style: "Display"
            role: "large"
            adaptive_height: True
            theme_text_color: "Primary"
            
        MDLabel:
            text: "Operations Manager"
            halign: "center"
            font_style: "Display"
            role: "small"
            adaptive_height: True
            theme_text_color: "Primary"
            
        MDLinearProgressIndicator:
            id: progress
            size_hint_x: .7
            pos_hint: {"center_x": .5}
            type: "determinate"
            value: root.progress
            
        MDButton:
            id: continue_button
            style: "filled"
            size_hint_x: None
            width: "200dp"
            pos_hint: {"center_x": .5}
            opacity: 1 if root.progress >= 100 else 0
            disabled: root.progress < 100
            on_press: root.switch_screen()
            
            MDButtonText:
                text: "Continuer"
                pos_hint: {"center_x": .5, "center_y": .5}
