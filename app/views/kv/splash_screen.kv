#:kivy 2.3.1

<SplashScreen>:
    name: 'splash'
    md_bg_color: self.theme_cls.backgroundColor
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: "16dp"
        spacing: "16dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        adaptive_height: True
        
        Image:
            source: "assets/images/logo.png"
            size_hint: None, None
            size: "150dp", "150dp"
            pos_hint: {"center_x": .5}
            
        MDLabel:
            text: "HighCloud RPAS"
            halign: "center"
            role: "large"
            font_style: "Display"
            adaptive_height: True
            
        MDLabel:
            text: "Operations Manager"
            halign: "center"
            font_style: "Display"
            role: "small"
            adaptive_height: True
            
        MDLinearProgressIndicator:
            id: progress_bar
            value: 0
            size_hint_x: .7
            pos_hint: {"center_x": .5}
            type: "determinate"
            
        MDLabel:
            id: status_label
            text: "Chargement..."
            halign: "center"
            adaptive_height: True
            
        MDButton:
            id: continue_button
            style: "filled"
            size_hint_x: None
            width: "200dp"
            pos_hint: {"center_x": .5}
            disabled: True
            on_press: root.go_to_login()
            MDButtonText:
                text: "Continuer"
                pos_hint: {"center_x": .5, "center_y": .5}
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1  # Blanc
