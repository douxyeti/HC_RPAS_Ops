#:kivy 2.3.1
#:import dp kivy.metrics.dp
#:import MDButton kivymd.uix.button.MDButton
#:import MDTopAppBar kivymd.uix.appbar.MDTopAppBar
#:import MDScrollView kivymd.uix.scrollview.MDScrollView
#:import MDIconButton kivymd.uix.button.MDIconButton
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDLabel kivymd.uix.label.MDLabel

<RolesManagerScreen>:
    name: 'roles_manager'
    
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(16)
        padding: dp(16)
        
        MDTopAppBar:
            title: "Gestionnaire des rôles"
            left_action_items: [["arrow-left", lambda x: root.go_back()]]
            elevation: 2
            md_bg_color: [0.2, 0.2, 0.9, 1]  # Bleu foncé
        
        MDScrollView:
            id: roles_scroll_view
            size_hint: 1, 0.9  # Laisser 10% pour l'en-tête
            scroll_type: ['bars']
            bar_width: "20dp"
            bar_color: [0.2, 0.2, 0.9, 1]  # Bleu
            bar_inactive_color: [0.2, 0.2, 0.9, 0.5]  # Bleu plus transparent
            do_scroll_x: False
            MDBoxLayout:
                id: roles_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: "8dp"
                padding: ["8dp", "8dp", "28dp", "8dp"]
