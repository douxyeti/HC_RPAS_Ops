#:kivy 2.2.1
<SpecializedDashboardScreen>:
    task_label: task_label
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(16)
        spacing: dp(10)

        # Barre supérieure avec titre et boutons
        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)
            padding: [0, 0, 0, dp(10)]

            MDIconButton:
                icon: "arrow-left"
                on_release: root.go_back()

            MDLabel:
                id: task_label
                text: "Tableau de bord spécialisé"
                theme_font_size: "Custom"
                font_size: "24sp"
                bold: True

            Widget:
                size_hint_x: 0.7

        # Zone de contenu principal
        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True

            MDBoxLayout:
                id: content_container
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(10)
                adaptive_height: True
